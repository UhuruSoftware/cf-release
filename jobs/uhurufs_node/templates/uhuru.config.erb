<%
plan = properties.plan || "free"
%>
<uhuru>
  <service
    index="<%= spec.index %>"
    plan="<%= plan %>"
    capacity="<%= properties.uhurufs_node.capacity %>"
    
    baseDir="<%= properties.uhurufs_node.basedir %>"
    localRoute="<%= properties.uhurufs_node.localroute %>"
    nodeId="<%= "uhurufs_node#{'_' + plan if plan != 'free'}_#{spec.index.to_i + 1}" %>"
    zInterval="30000"
    mbus="nats://<%= properties.nats.user %>:<%= properties.nats.password %>@<%= properties.nats.address %>:<%= properties.nats.port %>"
    localDb="localDb.xml"
    migrationNfs="C:\vcap\storage\migration"

    maxNatsPayload="1048576"
    fqdnHosts="false"
    opTimeLimit="6"
    
    statusPort="<%= properties.uhurufs_node.statusport || '12345' %>">

    <uhurufs
      maxStorageSize="100"
      useFsrm="true"
      useVhd="false"
      vhdFixedSize="false"
      />
    <supportedVersions defaultVersion="<%= properties.uhurufs_node.default_version %>">
      <supportedVersion name="0.9"/>
    </supportedVersions>
    <backup
      backupBaseDir="C:\vcap\storage\backup"
      timeout="120"
      serviceName="uhurufs"/>
  </service>
</uhuru>
