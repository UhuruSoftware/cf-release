pid_filename: /var/vcap/sys/run/uhuru_webui/uhuru_webui.pid
local_route: <%= spec.networks.send(properties.networks.apps).ip %>
port: <%= properties.uhuru.webui.port || 9494 %>
dev-mode: <%= properties.uhuru.webui.dev_mode || true %>

cloudfoundry:
  cloud_controller_api: "http://<%= properties.ccng.external_host || "api2" %>.<%= properties.domain %>"
  client_id: "cloud_controller"
  client_secret: "<%= properties.uaa.cc.client_secret %>"
  cloud_controller_admin: "<%= properties.uhuru.webui.cloud_admin || "sre@vmware.com" %>"
  cloud_controller_pass: "<%= properties.uhuru.webui.cloud_password%>"

uaa:
  uaa_api: "http://uaa.<%= properties.domain %>"

logger:
  level: <%= properties.uhuru.webui.logging_level || "info" %>