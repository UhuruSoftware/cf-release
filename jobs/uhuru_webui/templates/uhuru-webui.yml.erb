  visual_studio_plugin_link: "<%= properties.uhuru.webui.visual_studio_plugin_download_url || 'http://www.uhurucloud.com/tools/visualstudio' %>"
  app_cloud_admin_link: "<%= properties.uhuru.webui.cloud_admin_download_url || 'http://www.uhurucloud.com/tools/cloudadmin' %>"
  command_line_link: "<%= properties.uhuru.webui.command_line || 'http://docs.cloudfoundry.com/tools/vmc/installing-vmc.html' %>"
  eclipse_url: "<%= properties.uhuru.webui.eclipse_url || 'http://docs.cloudfoundry.com/tools/STS/configuring-STS.html' %>" #de pus pagina


quota_settings:
  billing_provider: chargify
  billing_provider_domain: uhurutestcloud
  auth_token: kQbDEn5os7NTX-TVv9GT
  product_handle: paid
  division_factor: 256


monitoring:
  reports:
    half_of_day:
      resolution: 30
      resolution_unit: 'minutes'
      sample_count: 30
    last_day:
      resolution: 1
      resolution_unit: 'hours'
      sample_count: 30
    last_week:
      resolution: 6
      resolution_unit: 'hours'
      sample_count: 30
    last_month:
      resolution: 1
      resolution_unit: 'days'
      sample_count: 30
    last_year:
      resolution: 12
      resolution_unit: 'days'
      sample_count: 30
  vmc_executable_path: bash -c "HOME=/home/vcap cf"
  cloud_user: monitoring
  cloud_password: "<%= properties.uhuru.webui.monitoring.monitoring_user_password %>"
  default_org: monitoring
  default_space: monitoring
  apps_domain: <%= properties.app_domains %>
  email_to: "<%= properties.uhuru.webui.monitoring.email_to %>"
  sleep_after_app_push: 240
  pause_after_each_app: 1
  database:
    database: "monitoring"
    host: <%= properties.vcap_databases.address %>
    port: <%= properties.vcap_databases.port %>
    encoding: utf8
    username: monitoring
    password: <%= properties.vcap_databases.roles.find { |role| role.tag == "monitoring" }.password %>
    adapter: postgresql
    timeout: 2000
#    adapter: sqlite3
#    database: /tmp/monitoring.db
#    pool: 5
#    timeout: 5000
  components:
    deas:
    <% if properties.uhuru.webui.monitoring.components.dea > 0 %>
    - name: "dea"
    <% end %>
    <% if properties.uhuru.webui.monitoring.components.win_dea > 0 %>
    - name: "win_dea"
    <% end %>
    services:
    <% if properties.uhuru.webui.monitoring.components.mysql_node > 0 %>
    - name: mysql_node
      token: <%= properties.mysql_gateway.token %>
    <% end %>

#    - name: mongodb_node <- not used yet
#      token:

    <% if properties.uhuru.webui.monitoring.components.redis_node > 0 %>
    - name: redis_node
      token: <%= properties.redis_gateway.token %>
    <% end %>
    <% if properties.uhuru.webui.monitoring.components.rabbit_node > 0 %>
    - name: rabbit_node
      token: <%= properties.rabbit_gateway.token %>
    <% end %>

    <% if properties.uhuru.webui.monitoring.components.postgresql_node > 0 %>
    - name: postgresql_node
      token: <%= properties.postgresql_gateway.token %>
    <% end %>
#    - name: uhuru_tunnel_node <- not used yet
#      token:
#    - name: uhurufs_node <- not used yet
#      token:
    <% if properties.uhuru.webui.monitoring.components.mssql_node > 0 %>
    - name: mssql_node
      token: <%= properties.mssql_gateway.token %>
    <% end %>

  buildpacks:
    dotNet: https://github.com/stefanschneider/dummy-buildpack.git
    java: https://github.com/ramnivas/cloudfoundry-buildpack-java
    nodejs: https://github.com/cloudfoundry/heroku-buildpack-nodejs
    php: https://github.com/heroku/heroku-buildpack-php
    ruby: https://github.com/cloudfoundry/heroku-buildpack-ruby
