pid_filename: /var/vcap/sys/run/uhuru_webui/uhuru_webui.pid
local_route: <%= spec.networks.send(properties.networks.apps).ip %>
port: <%= properties.uhuru.webui.port || 9191 %>
dev-mode: true

cloud_controller_url: "<%= properties.cc.srv_api_uri %>"

uaa:
  url: "<%= properties.uaa_endpoint %>"
  client_id: "webui"
  client_secret: "<%= properties.uaa.clients.webui.secret %>"


contact:
  company: "<%= properties.uhuru.webui.contact.company || "Uhuru Software, Inc." %>"
  address: "<%= properties.uhuru.webui.contact.address || "17530 NE Union Hill Road, Suite 120, Redmond, WA 98052, USA." %>"
  phone: "<%= properties.uhuru.webui.contact.phone || "+1 (425) 406-6383" %>"
  email: "<%= properties.uhuru.webui.contact.email || "uhuru@uhurusoftware.com" %>"
  company_link: <%= properties.uhuru.webui.contact.company_link || "http://www.uhurusoftware.com" %>
  support_link: <%= properties.uhuru.webui.contact.support_link || "http://uhurusoftware.zendesk.com" %>


email:
  from: "<%= properties.uhuru.webui.email.from || "postmaster@uhurusoftware.mailgun.org" %>"
