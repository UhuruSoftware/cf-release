  activation_link_secret: "<%= properties.uhuru.webui.activation_link_secret %>"

  more_videos_link: <%= properties.uhuru.webui.video_links || 'http://support.uhurusoftware.com/forums/20507726-uhuru-knowledge-bases' %>
  guest_feedback_link:  <%= properties.uhuru.webui.guest_feedback_link || 'http://bit.ly/uhrbloglife' %>
  twitter_link:  <%= properties.uhuru.webui.twitter_link || 'https://www.twitter.com/uhurusoftware' %>
  facebook_link: <%= properties.uhuru.webui.facebook_link || 'https://www.facebook.com/uhurusoftware' %>

  terms_of_services_link: <%= properties.uhuru.webui.terms_of_services_link || 'http://uhurusoftware.com/tos' %>
