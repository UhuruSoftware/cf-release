  secret: "<%= properties.uhuru.webui.email.secret || "4q899o1avzu3" %>"
  auth_method: <%= properties.uhuru.webui.email.auth_method || ":plain" %>
  enable_tls: <%= properties.uhuru.webui.email.enable_tls || true %>

recaptcha:
  recaptcha_public_key: "<%= properties.uhuru.webui.recaptcha_public_key %>"
  recaptcha_private_key: "<%= properties.uhuru.webui.recaptcha_private_key %>"


logging:
  level: debug
#  file: /var/vcap/sys/log/simple_webui/simple_webui.log


webui:
  page_title: "<%= properties.uhuru.webui.page_title || "Uhuru WebUi" %>"
  site_tab: "<%= properties.uhuru.webui.site_tab || "Uhuru" %>"
